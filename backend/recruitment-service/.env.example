# Application settings
APP_NAME=recruitment-service
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
AUTH_SECRET_KEY=your-secret-key-here
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Azure AD B2C Settings
AZURE_AD_B2C_TENANT_NAME=CognitiveHire
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret
AZURE_AD_B2C_SIGNIN_POLICY=B2C_1_cognitivehire

# Swagger UI OAuth Settings
SWAGGER_UI_CLIENT_ID=your-client-id
SWAGGER_UI_OAUTH_REDIRECT_URL=http://localhost:8000/docs/oauth2-redirect.html

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database connection string
# For async SQLAlchemy, use postgresql+asyncpg:// instead of postgresql://
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/recruitment
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379

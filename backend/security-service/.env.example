# Security Service Environment Configuration

# Environment (development, test, production)
ENVIRONMENT=development

# Server settings
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/security_service
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Azure AD B2C
AZURE_AD_B2C_TENANT_ID=your-tenant-id
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret
AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin

# JWT Settings
JWT_SECRET=change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Auth Bypass (development only)
AUTH_BYPASS=false
AUTH_BYPASS_SECRET=dev-bypass-secret-change-me

# OpenTelemetry
OTEL_ENABLED=false
OTEL_SERVICE_NAME=security-service
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

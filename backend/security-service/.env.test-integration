# Test Integration Environment Configuration

ENVIRONMENT=test
LOG_LEVEL=DEBUG

# Database - use a separate test database
DATABASE_URL=postgresql://postgres:admin@localhost:5432/security_service_test

# Azure AD B2C Test Tenant 
AZURE_AD_B2C_TENANT_ID=cognitivehire
AZURE_AD_B2C_CLIENT_ID=
AZURE_AD_B2C_CLIENT_SECRET=
AZURE_AD_B2C_POLICY_NAME=B2C_1_cognitivehire

# JWT Settings - use a different secret for tests
JWT_SECRET=test-secret-do-not-use-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Auth Bypass - enable for basic tests, disable for AD B2C integration tests
AUTH_BYPASS=false
